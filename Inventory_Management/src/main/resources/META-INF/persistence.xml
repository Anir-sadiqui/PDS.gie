<persistence
        xmlns="http://java.sun.com/xml/ns/persistence"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
        version="2.0">

    <persistence-unit name="manager1" transaction-type="RESOURCE_LOCAL">
        <!-- Update the provider to the latest Hibernate provider -->
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <!-- Add your entity classes here if needed -->
        <!-- Example: <class>org.example.Entities.YourEntity</class> -->

        <properties>
            <!-- Update the Hibernate dialect for MySQL -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL57Dialect"/>

            <!-- Change the DDL auto setting to "update" to avoid dropping the schema -->
            <property name="hibernate.hbm2ddl.auto" value="update"/>

            <!-- Configure the MySQL JDBC driver, URL, username, and password -->
            <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/gie?createDatabaseIfNotExist=true"/>
            <property name="javax.persistence.jdbc.user" value="root"/>
            <property name="javax.persistence.jdbc.password" value="@youbm@hjouby"/>

            <!-- Additional properties for debugging and improved performance -->
            <property name="hibernate.show_sql" value="true"/> <!-- Logs SQL queries -->
            <property name="hibernate.format_sql" value="true"/> <!-- Formats SQL queries for readability -->
            <property name="hibernate.use_sql_comments" value="true"/> <!-- Adds comments in the SQL logs -->
        </properties>
    </persistence-unit>
</persistence>
